<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Change actionbar style -->
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Custom actionbar theme -->
    <style name="MyActionBarTheme"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/translucentGrey</item>
        <!-- Support library compatibility -->
        <item name="background">@color/translucentGrey</item>
    </style>

</resources>
